

<section class="ui raised segment">

    <div class="ui grid">

            <table class="ui celled table segment">
                <thead>
                <tr>
                    <th>Type</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Latitude</th>
                    <th>Longitude</th>
                    <th>Submitted By</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                </thead>
                <tbody>
                {{#each pois}}
                    <tr>

                        <td> {{attractionType}} </td>
                        <td> {{attractionName}} </td>
                        <td> {{description}} </td>
                        <td> {{latitude}} </td>
                        <td> {{longitude}} </td>
                        <td> {{poi.firstName}} {{poi.lastName}} </td>
                        <td> <a href="/poi/showPoiSettings{{_id}}"> <i class="edit outline icon"></i> </a></td>
                        <td> <a href="/poi/deletePoi{{_id}}"> <i class="trash red alternate outline icon"></i> </a> </td>

                    </tr>
                {{/each}}
                </tbody>
            </table>

    </div>
</section>